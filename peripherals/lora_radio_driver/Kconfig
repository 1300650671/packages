                                            default n
                                            if BSP_USING_SPI3
                                                config LORA_RADIO0_SPI_BUS_NAME
                                                    string "spi device name"
                                                    default spi3
                                            endif
                                    endmenu

                                     config LORA_RADIO_GPIO_SETUP
                                        bool "Enable LoRa Radio GPIO Setup"
                                        default n

                                        if LORA_RADIO_GPIO_SETUP
