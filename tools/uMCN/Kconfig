
# Kconfig file for package uMCN
menuconfig PKG_USING_UMCN
    bool "uMCN is a light-weight and powerful IPC library based on publisher/subscriber model."
    default n

if PKG_USING_UMCN

    config PKG_UMCN_PATH
        string
        default "/packages/tools/uMCN"

    choice
        prompt "Version"
        default PKG_USING_UMCN_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_UMCN_V[100]
            bool "v[1.0.0]"

        config PKG_USING_UMCN_LATEST_VERSION
            bool "latest"
    endchoice
          
    config PKG_UMCN_VER
       string
       default "v[1.0.0]"    if PKG_USING_UMCN_V[100]
       default "latest"    if PKG_USING_UMCN_LATEST_VERSION

endif

